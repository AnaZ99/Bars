@model IEnumerable<Barovi.Models.Bars>

@{
    ViewBag.Title = "Index";
}

<br/>



<div class="eden" style="background-color:#ca7d56; border:double;  border-color:white">
    <h1 style="text-align:center; color:white; font-family:'Comic Sans MS'">БАРОВИ</h1>
    <hr/>
    <table class="table" style="font-size:20px;background-color:#e1a97e; font-family:'Comic Sans MS'; color:white" id="table1" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grad)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <img src="@item.Image" style="max-width:200px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grad)
                    </td>
                    <td>

                        <div style="font-size:20px" id="details">@Html.ActionLink("Види детали", "Details", new { id = item.Id }) </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{

    <script>

        $("#table1").DataTable();

    </script>

}